                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}BuildProjectOnLoad"
                                        IsChecked="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}BuildProjectOnLoad].Value, Converter={local:BoolToStringConverter}, FallbackValue={x:Null}}" />

                                <!--ShowByDefault-->
                                <TextBlock Text="ShowByDefault:" Grid.Column="0" Grid.Row="28" Style="{StaticResource LabelTextBlock}"
