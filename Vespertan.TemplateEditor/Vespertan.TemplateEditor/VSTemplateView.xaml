                                <TextBox Grid.Column="1" Grid.Row="40" Style="{StaticResource StdTextBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}CustomDataSignature"
                                        Text="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}CustomDataSignature].Value}" />

                                <!--AppIdFilter-->
                                <TextBlock Text="AppIdFilter:" Grid.Column="0" Grid.Row="41" Style="{StaticResource LabelTextBlock}"
