                                <TextBlock Text="FrameworkVersion:" Grid.Column="0" Grid.Row="30" Style="{StaticResource LabelTextBlock}"
                                        ToolTip="Optional element.&#xA;Deprecated. Use RequiredFrameworkVersion instead" />
                                <TextBox Grid.Column="1" Grid.Row="30" Style="{StaticResource StdTextBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}FrameworkVersion"
