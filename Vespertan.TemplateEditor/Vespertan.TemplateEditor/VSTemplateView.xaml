                                <ComboBox Grid.Column="1" Grid.Row="31" Style="{StaticResource StdComboBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}RequiredFrameworkVersion"
                                        Text="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}RequiredFrameworkVersion].Value}">
                                    <sys:String>2.0</sys:String>
                                    <sys:String>3.0</sys:String>
                                    <sys:String>3.5</sys:String>
                                    <sys:String>4.0</sys:String>
                                    <sys:String>4.5</sys:String>
                                    <sys:String>4.5.1</sys:String>
                                    <sys:String>4.5.2</sys:String>
                                    <sys:String>4.6</sys:String>
                                    <sys:String>4.6.1</sys:String>
                                    <sys:String>4.6.2</sys:String>
                                    <sys:String>4.7</sys:String>
                                    <sys:String>4.7.1</sys:String>
                                    <sys:String>4.7.2</sys:String>
                                </ComboBox>

                                <!--MaxFrameworkVersion-->
                                <TextBlock Text="MaxFrameworkVersion:" Grid.Column="0" Grid.Row="32" Style="{StaticResource LabelTextBlock}"
                                        ToolTip="Optional element.&#xA;Use this element if the template only supports a specific maximum version of the .NET Framework." />

                                <ComboBox Grid.Column="1" Grid.Row="32" Style="{StaticResource StdComboBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}MaxFrameworkVersion"
                                        Text="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}MaxFrameworkVersion].Value}">
                                    <sys:String>2.0</sys:String>
                                    <sys:String>3.0</sys:String>
                                    <sys:String>3.5</sys:String>
                                    <sys:String>4.0</sys:String>
                                    <sys:String>4.5</sys:String>
                                    <sys:String>4.5.1</sys:String>
                                    <sys:String>4.5.2</sys:String>
                                    <sys:String>4.6</sys:String>
                                    <sys:String>4.6.1</sys:String>
                                    <sys:String>4.6.2</sys:String>
                                    <sys:String>4.7</sys:String>
                                    <sys:String>4.7.1</sys:String>
                                    <sys:String>4.7.2</sys:String>
                                </ComboBox>

                                <!--SupportsMasterPage-->
                                <TextBlock Text="SupportsMasterPage:" Grid.Column="0" Grid.Row="33" Style="{StaticResource LabelTextBlock}"
                                        ToolTip="Optional element.&#xA;Specifies whether the template supports a master page for web projects." />
                                <CheckBox Grid.Column="1" Grid.Row="33" Style="{StaticResource StdCheckBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}SupportsMasterPage"
                                        IsChecked="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}SupportsMasterPage].Value, Converter={local:BoolToStringConverter}, FallbackValue={x:Null}}" />
                                <!--SupportsCodeSeparation-->
                                <TextBlock Text="SupportsCodeSeparation:" Grid.Column="0" Grid.Row="34"
                                        Style="{StaticResource LabelTextBlock}"
                                        ToolTip="Optional element.&#xA;Specifies whether the template supports code separation, or the code-behind page model, for web projects." />
                                <CheckBox Grid.Column="1" Grid.Row="34" Style="{StaticResource StdCheckBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}SupportsCodeSeparation"
                                        IsChecked="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}SupportsCodeSeparation].Value, Converter={local:BoolToStringConverter}, FallbackValue={x:Null}}" />
                                <!--SupportsLanguageDropDown-->
                                <TextBlock Text="SupportsLanguageDropDown:" Grid.Column="0" Grid.Row="35"
                                        Style="{StaticResource LabelTextBlock}"
                                        ToolTip="Optional element.&#xA;Specifies whether the template is identical for multiple languages, and whether the Language option is available from the New Project dialog box." />
                                <CheckBox Grid.Column="1" Grid.Row="35" Style="{StaticResource StdCheckBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}SupportsLanguageDropDown"
                                        IsChecked="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}SupportsLanguageDropDown].Value, Converter={local:BoolToStringConverter}, FallbackValue={x:Null}}" />
                                <!--TargetPlatformName-->
                                <TextBlock Text="TargetPlatformName:" Grid.Column="0" Grid.Row="36" Style="{StaticResource LabelTextBlock}"
                                        ToolTip="Optional element.&#xA;Specifies the platform that the project template targets. This element specifies that a project template is used to create Windows 8.x Store apps." />
                                <TextBox Grid.Column="1" Grid.Row="36" Style="{StaticResource StdTextBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}TargetPlatformName"
                                        Text="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}TargetPlatformName].Value}" />

                                <!--RequiredPlatformVersion-->
                                <TextBlock Text="RequiredPlatformVersion:" Grid.Column="0" Grid.Row="37"
                                        Style="{StaticResource LabelTextBlock}" ToolTip="Optional element.&#xA;" />
                                <TextBox Grid.Column="1" Grid.Row="37" Style="{StaticResource StdTextBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}RequiredPlatformVersion"
                                        Text="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}RequiredPlatformVersion].Value}" />

                                <!--MaxOSVersion-->
                                <TextBlock Text="MaxOSVersion:" Grid.Column="0" Grid.Row="38" Style="{StaticResource LabelTextBlock}"
                                        ToolTip="Optional element.&#xA;Maximum supported OS version - Expected to be a Windows version e.g. '6.2.9200' for Windows 8" />
                                <TextBox Grid.Column="1" Grid.Row="38" Style="{StaticResource StdTextBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}MaxOSVersion"
                                        Text="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}MaxOSVersion].Value}" />

                                <!--SpecialTemplateType-->
                                <TextBlock Text="SpecialTemplateType:" Grid.Column="0" Grid.Row="39" Style="{StaticResource LabelTextBlock}"
                                        ToolTip="Optional element.&#xA;Special project template type: EmptyShared (for empty shared project), EmptyNode (for empty head node for one app)" />
                                <ComboBox Grid.Column="1" Grid.Row="39" Style="{StaticResource StdComboBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}SpecialTemplateType"
                                        Text="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}SpecialTemplateType].Value}">
                                    <sys:String>EmptyShared</sys:String>
                                    <sys:String>EmptyNode</sys:String>
                                </ComboBox>

