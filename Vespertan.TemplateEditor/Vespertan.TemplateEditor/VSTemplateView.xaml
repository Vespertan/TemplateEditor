                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}CreateInPlace"
                                        IsChecked="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}CreateInPlace].Value, Converter={local:BoolToStringConverter}, FallbackValue={x:Null}}" />
                                <!--BuildOnLoad-->
                                <TextBlock Text="BuildOnLoad:" Grid.Column="0" Grid.Row="26" Style="{StaticResource LabelTextBlock}"
                                        ToolTip="Optional element.&#xA;Builds solution immediately after creation" />
                                <CheckBox Grid.Column="1" Grid.Row="26" Style="{StaticResource StdCheckBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}BuildOnLoad"
