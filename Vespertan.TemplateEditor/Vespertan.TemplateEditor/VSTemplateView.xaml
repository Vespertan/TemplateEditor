                                <CheckBox Grid.Column="1" Grid.Row="28" Style="{StaticResource StdCheckBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}ShowByDefault"
