                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}AppendDefaultFileExtension"
                                        IsChecked="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}AppendDefaultFileExtension].Value, Converter={local:BoolToStringConverter}, FallbackValue={x:Null}}" />

