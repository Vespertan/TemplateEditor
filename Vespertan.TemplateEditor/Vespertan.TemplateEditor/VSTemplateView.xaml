                                <TextBox Grid.Column="1" Grid.Row="41" Style="{StaticResource StdTextBox}"
                                        local:TextChangedAction.AddXElementIfNotExistsRemoveEmpty="{}{http://schemas.microsoft.com/developer/vstemplate/2005}AppIdFilter"
                                        Text="{Binding Element[{http://schemas.microsoft.com/developer/vstemplate/2005}AppIdFilter].Value}" />
                            </Grid>
                        </DataTemplate>
                        <!--ProjectItem-->
                        <DataTemplate DataType="{}{http://schemas.microsoft.com/developer/vstemplate/2005}TemplateContent">

                        </DataTemplate>

                        <DataTemplate DataType="{}{http://schemas.microsoft.com/developer/vstemplate/2005}WizardExtension">

                        </DataTemplate>

                        <DataTemplate DataType="{}{http://schemas.microsoft.com/developer/vstemplate/2005}WizardData">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <!--Name-->
                                <TextBlock Text="Name:" Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelTextBlock}"
                                        ToolTip="Optional element. Default valu $WizardData$" />
                                <TextBox Grid.Column="1" Grid.Row="0" Style="{StaticResource StdTextBox}"
                                        local:TextChangedAction.AddXAttributeIfNotExists="Name" Text="{Binding Attribute[Name].Value}" />
                                <!--Value XML-->
                                <TextBlock Grid.Column="0" Grid.Row="1" Text="Data (Xml):" Style="{StaticResource LabelTextBlock}"
                                        VerticalAlignment="Top" Margin="3" ToolTip="XML form wizard data" />
                                <TextBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Auto" VerticalContentAlignment="Stretch" AcceptsReturn="True"
                                        AcceptsTab="True" LostFocus="TextBox_LostFocus" Loaded="TextBox_Loaded" />

                            </Grid>
                        </DataTemplate>

                    </ContentControl.Resources>

                </ContentControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>

    
   